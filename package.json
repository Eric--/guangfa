{
  "name": "ng2-webpack-gulp",
  "version": "0.0.1",
  "description": "scaffold for ng2-webpack-gulp",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf dist",
    "hserver": "http-server . -p 5556",
    "build_prod": "npm run build && browserify -s app dist/app.js > dist/bundle.js && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "gzip": "gzip dist/bundle.min.js",
    "aot:ngc": "node_modules/.bin/ngc -p tsconfig.aot.json",
    
    "server": "set NODE_ENV=dev&& webpack-dev-server --port 8080 -d --open --progress --colors --profile --watch --content-base src/",
    "server:aot": "set NODE_ENV=pro&& webpack-dev-server --port 8080 -d --open --progress --colors --profile --watch --content-base src/",
    "dev": "set NODE_ENV=dev&& webpack -d --colors --profile --display-error-details",
    "pro": "set NODE_ENV=pro&& webpack -p --colors --profile",
    "pro:abs": "set NODE_ENV=pro&&set NODE_ABS=abs&& webpack -p --colors --profile",
    "build": "npm run clean && npm run pro",
    "build:abs": "npm run clean && npm run pro:abs"
  },
  "repository": {
    "type": "git",
    "url": "git_repo"
  },
  "keywords": [
    "ng2",
    "webpack",
    "gulp"
  ],
  "author": "erayliu",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "^4.0.3",
    "@angular/compiler-cli": "^4.0.3",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/platform-server": "^4.0.3",
    "@angular/router": "~4.0.0",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.0.1",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@ngtools/webpack": "^1.3.1",
    "@types/node": "^7.0.13",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "compression-webpack-plugin": "^0.4.0",
    "css-loader": "^0.28.0",
    "es6-shim": "^0.35.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.3.0",
    "imagemin": "^5.2.2",
    "ng-annotate": "^1.2.1",
    "ng-annotate-webpack-plugin": "^0.2.1-pre",
    "node-sass": "^4.5.2",
    "prop-types": "^15.5.8",
    "raw-loader": "^0.5.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "sass-loader": "^6.0.3",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.16.1",
    "to-string-loader": "^1.1.5",
    "ts-loader": "^2.0.3",
    "typescript": "^2.2.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-bundle-analyzer": "^2.4.0",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  }
}
